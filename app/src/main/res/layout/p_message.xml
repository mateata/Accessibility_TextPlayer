<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/img_pop_r_box" >

    <!-- 변경 -->

    <RelativeLayout
        android:id="@+id/popup_message_layout_contentsset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <RelativeLayout
            android:id="@+id/popup_message_layout_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/popup_message_text_ment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_message_layout_btnset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_message_layout_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/popup_message_btn_cancel"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_link_g_se"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/common_cancel"
                android:textColor="@color/color_txt_gray"
                android:textSize="16dp" />
            <!-- 변경 -->

            <Button
                android:id="@+id/popup_message_btn_ok"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/popup_message_btn_cancel"
                android:background="@drawable/btn_link_g_se"
                android:text="@string/common_ok"
                android:textColor="@color/color_txt_gray"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_message_layout_buttomgap"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/popup_message_layout_contentsset" >
    </RelativeLayout>

</RelativeLayout>